/* components/bubble/bubble.wxss */
.bubble {
  display: block;
  margin-bottom: 20px;
  padding: 0 20px;
  color: #262C2D;
}

.bubble-avatar {
  position:absolute;
  margin: 0;
  left:20px;
  height: 45px;
  width: 45px;
  border-radius: 45px;
}

.bubble-content-container {
  padding: 10px 10px 5px 20px;
  margin-left:80px;
  min-height: 50px;
  background-color: #22B573;
  border-radius: 0 12px 12px 12px;
  box-shadow:0 7px 10px #1A1A1A;
}

.bubble-username {
  display: block;
  font-size: 14px;
}
.bubble-content {
  display: block;
  font-size: 16px;
}
.bubble-time {
  margin-top: 4px;
  display: block;
  font-size: 12px;
  text-align: right;
  color: #707070;
}