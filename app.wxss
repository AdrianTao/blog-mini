/**app.wxss**/
page {
  background-color: #262C2D;
  color: #fff;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #262C2D;
}

.shadow-line {
  position: fixed;
  top: -20px;left: 0;right: 0;
  display: block;
  width: 100%;
  height: 20px;
  background-color: #262C2D; 
  box-shadow: 0 5px 20px #1A1A1A;
}

/* components/tabs */
.app-tabs-container {
  box-shadow: 0 5px 20px #1A1A1A;
}
.app-tab {
  border-bottom: 0!important;
}

